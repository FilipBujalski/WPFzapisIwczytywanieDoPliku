<Window x:Class="danexml.DodajPracownika"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj Pracownika" Height="400" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Imię:" Margin="5"/>
            <TextBox x:Name="ImieTextBox" Width="200" Margin="5"/>

            <TextBlock Text="Nazwisko:" Margin="5"/>
            <TextBox x:Name="NazwiskoTextBox" Width="200" Margin="5"/>

            <TextBlock Text="Zarobki:" Margin="5"/>
            <TextBox x:Name="ZarobkiTextBox" Width="200" Margin="5" PreviewTextInput="ZarobkiTextBox_PreviewTextInput" />

            <TextBlock Text="Data zatrudnienia:" Margin="5"/>
            <DatePicker x:Name="DataZatrudnieniaPicker" Width="200" Margin="5"/>

            <TextBlock Text="Data zwolnienia:" Margin="5"/>
            <DatePicker x:Name="DataZwolnieniaPicker" Width="200" Margin="5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Button Content="Dodaj" Width="80" Margin="5" Click="Dodaj_Click"/>
                <Button Content="Anuluj" Width="80" Margin="5" Click="Anuluj_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
